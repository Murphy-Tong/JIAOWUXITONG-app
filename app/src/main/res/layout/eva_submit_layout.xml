<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/text_margin"
    android:orientation="vertical">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:id="@+id/eva_total"
        android:text="@string/your_evaluation_total"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/extra_opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeActionId="@+id/eva_submit"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionGo"
            android:inputType="textMultiLine"
            android:maxLines="8"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:hint="you can input some else opt here" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="clear"
            android:elevation="3dp"
            android:id="@+id/eva_clear"
            android:background="@drawable/ripple_bg"/>
        <Button
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="save"
            android:elevation="3dp"
            android:id="@+id/eva_save"
            android:background="@drawable/ripple_bg"/>

        <Button
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="submit"
            android:elevation="3dp"
            android:id="@+id/eva_submit"
            android:background="@drawable/ripple_bg"/>
    </LinearLayout>
</LinearLayout>
