<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginTop="50dp"
    android:id="@+id/student"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD STUDENT"
        android:transitionName="fab_share"
        android:layout_marginBottom="50dp"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>

   <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <EditText
           android:gravity="center"
           android:id="@+id/add_s_name"
           android:layout_width="match_parent"
           android:singleLine="true"
           android:hint="std name"
           android:layout_height="wrap_content" />
   </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/add_s_sex_radiogroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:tag="1"
        android:layout_height="wrap_content"
        android:text="male"/>
        <RadioButton
            android:tag="0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="female"/>
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:hint="password"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="numberPassword"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/add_s_password"
            android:maxLength="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:hint="confrim password"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="6"
            android:inputType="numberPassword"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/add_s_password_confrim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>
    
  
</LinearLayout>
