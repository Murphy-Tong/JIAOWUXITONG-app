<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary</item>
        <item name="colorAccent">@color/theme_color_primary</item>
        <item name="android:textColorPrimary">@color/theme_color_text_primary</item>
        <item name="android:textColorHighlight">@color/theme_color_text_highlight</item>
        <item name="android:textColor">@color/theme_color_text_primary</item>
        <item name="android:textColorHint">@color/theme_color_text_hint</item>
        <item name="android:listSelector">?selectableItemBackground</item>
        <item name="android:textColorTertiary">@color/theme_color_text_tertiary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="android:windowBackground">@color/theme_color_window_background</item>
        <item name="android:textColorLink">@color/theme_color_secondary</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/theme_color_primary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
    </style>

    <style name="dialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <style name="MyContainerStyle">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeNoAnimation" parent="AppTheme.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
    </style>

    <style name="AppTheme.NoActionBarTranslation" parent="ThemeNoAnimation">
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
